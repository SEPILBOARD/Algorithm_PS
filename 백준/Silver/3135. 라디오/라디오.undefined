#include <bits/stdc++.h>
#define FASTIO ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
using namespace std;
typedef long long ll;

int a, b, n, ans;

signed main()
{
    FASTIO;
    cin >> a >> b >> n;
    ans = abs(a-b);

    for(int i = 0; i<n; i++){
        int e; cin >> e;
        ans = min(ans, abs(e-b)+1);
    }
    cout << ans;

    return 0;
}